{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spanish Invoice Schema",
  "description": "Schema for validating extracted Spanish invoice data",
  "type": "object",
  "required": [
    "invoice_number",
    "issue_date",
    "vendor_name",
    "vendor_tax_id",
    "vendor_address",
    "buyer_name",
    "buyer_tax_id",
    "taxable_base",
    "vat_rate",
    "vat_amount",
    "total_amount"
  ],
  "properties": {
    "// 1. Header / Parties": {
      "type": "null",
      "description": "Document header and party information"
    },
    "invoice_series": {
      "type": "string",
      "description": "Invoice series identifier"
    },
    "invoice_number": {
      "type": "string",
      "description": "Invoice identification number (unique)"
    },
    "issue_date": {
      "type": "string",
      "description": "Date when the invoice was issued in DD/MM/YYYY format",
      "pattern": "^[0-3][0-9]/[0-1][0-9]/[0-9]{4}$"
    },
    "vendor_name": {
      "type": "string",
      "description": "Legal name of the company or person issuing the invoice"
    },
    "vendor_tax_id": {
      "type": "string",
      "description": "Tax identification number (NIF/CIF) of the vendor",
      "pattern": "^[A-Z0-9]\\d{7}[A-Z0-9]$"
    },
    "vendor_address": {
      "type": "object",
      "description": "Fiscal address of the vendor",
      "required": ["street_type","street_name","street_number","postal_code","city","province","country"],
      "properties": {
        "street_type": {
          "type": "string",
          "description": "Tipo de vía: Calle, Avenida, Plaza, etc."
        },
        "street_name": {
          "type": "string",
          "description": "Nombre de la vía"
        },
        "street_number": {
          "type": "string",
          "description": "Número de la vía"
        },
        "floor": {
          "type": "string",
          "description": "Piso (opcional)"
        },
        "door": {
          "type": "string",
          "description": "Letra o puerta (opcional)"
        },
        "postal_code": {
          "type": "string",
          "description": "Código postal",
          "pattern": "^[0-9]{5}$"
        },
        "city": {
          "type": "string",
          "description": "Localidad"
        },
        "province": {
          "type": "string",
          "description": "Provincia"
        },
        "country": {
          "type": "string",
          "description": "Código ISO del país",
          "pattern": "^[A-Z]{2}$",
          "default": "ES"
        }
      }
    },
    "buyer_name": {
      "type": "string",
      "description": "Name of the company or person receiving the invoice"
    },
    "buyer_tax_id": {
      "type": "string",
      "description": "Tax identification number (NIF/VAT) of the buyer",
      "pattern": "^[A-Z0-9]\\d{7}[A-Z0-9]$"
    },
    "buyer_address": {
      "type": "object",
      "description": "Address of the buyer (optional)",
      "properties": {
        "street_type": { "type": "string" },
        "street_name": { "type": "string" },
        "street_number": { "type": "string" },
        "floor": { "type": "string" },
        "door": { "type": "string" },
        "postal_code": { "type": "string", "pattern": "^[0-9]{5}$" },
        "city": { "type": "string" },
        "province": { "type": "string" },
        "country": { "type": "string", "pattern": "^[A-Z]{2}$", "default": "ES" }
      }
    },
    "currency": {
      "type": "string",
      "description": "Currency code used in the invoice",
      "default": "EUR",
      "enum": ["EUR", "USD", "GBP"]
    },
    "// 2. Totals & Taxes": {
      "type": "null",
      "description": "Financial totals and tax information"
    },
    "taxable_base": {
      "type": "string",
      "description": "Taxable base subtotal amount before taxes",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "discount_rate": {
      "type": "string",
      "description": "Discount percentage rate applied",
      "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
    },
    "discount_amount": {
      "type": "string",
      "description": "Discount amount in currency",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "vat_rate": {
      "type": "string",
      "description": "VAT percentage rate applied",
      "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
    },
    "vat_amount": {
      "type": "string",
      "description": "VAT amount in currency",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "vat_breakdown": {
      "type": "array",
      "description": "Breakdown of multiple VAT rates and amounts if applicable",
      "items": {
        "type": "object",
        "properties": {
          "rate": {
            "type": "string",
            "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
          },
          "base": {
            "type": "string",
            "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
          },
          "amount": {
            "type": "string",
            "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
          }
        }
      }
    },
    "igic_rate": {
      "type": "string",
      "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
    },
    "igic_amount": {
      "type": "string",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "irpf_rate": {
      "type": "string",
      "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
    },
    "irpf_amount": {
      "type": "string",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "surcharge_rate": {
      "type": "string",
      "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
    },
    "surcharge_amount": {
      "type": "string",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "total_gross": {
      "type": "string",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "total_amount": {
      "type": "string",
      "description": "Total amount payable (including all taxes)",
      "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
    },
    "// 3. Line Items": {
      "type": "null",
      "description": "Individual line items on the invoice"
    },
    "line_items": {
      "type": "array",
      "description": "Individual line items on the invoice",
      "items": {
        "type": "object",
        "required": ["description","qty","unit_price","line_total"],
        "properties": {
          "line_number": {
            "type": "string",
            "description": "Line item number or identifier"
          },
          "description": {
            "type": "string",
            "description": "Description of the product or service"
          },
          "item_type": {
            "type": "string",
            "description": "Whether item is product or service",
            "enum": ["product","service"]
          },
          "qty": {
            "type": "string",
            "description": "Quantity of items"
          },
          "unit_of_measure": {
            "type": "string",
            "description": "Unit of measure (e.g., units, kg, hours)"
          },
          "unit_price": {
            "type": "string",
            "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
          },
          "line_discount_rate": {
            "type": "string",
            "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
          },
          "line_tax_rate": {
            "type": "string",
            "pattern": "^[0-9]{1,2}(,[0-9]{1,2})?%$"
          },
          "line_tax_amount": {
            "type": "string",
            "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
          },
          "line_total": {
            "type": "string",
            "pattern": "^[0-9]{1,3}(\\s?[0-9]{3})*(,[0-9]{2})?(\\s?€)?$"
          }
        }
      }
    },
    "// 4. Payment Info": {
      "type": "null",
      "description": "Payment terms and banking information"
    },
    "payment_terms": {
      "type": "string",
      "description": "Terms of payment (e.g., 30 days)"
    },
    "due_date": {
      "type": "string",
      "description": "Payment due date in DD/MM/YYYY format",
      "pattern": "^[0-3][0-9]/[0-1][0-9]/[0-9]{4}$"
    },
    "payment_method": {
      "type": "string",
      "description": "Method of payment (transfer, SEPA, card, etc.)",
      "enum": ["transfer","sepa","card","cash","check","other"]
    },
    "bank_account": {
      "type": "string",
      "description": "Bank account number or IBAN",
      "pattern": "^[A-Z]{2}[0-9]{2}[A-Z0-9]{4}[0-9]{7}([A-Z0-9]?){0,16}$"
    },
    "swift_bic": {
      "type": "string",
      "description": "SWIFT/BIC code of the bank",
      "pattern": "^[A-Z]{6}[A-Z0-9]{2}([A-Z0-9]{3})?$"
    },
    "// 5. Regulatory & Metadata": {
      "type": "null",
      "description": "Regulatory information and document metadata"
    },
    "invoice_type": {
      "type": "string",
      "enum": ["invoice","simplified","rectification","credit_note","debit_note"]
    },
    "original_invoice_ref": {
      "type": "string"
    },
    "electronic_signature": {
      "type": "string"
    },
    "qr_code_hash": {
      "type": "string"
    },
    "sii_submission_id": {
      "type": "string"
    },
    "sii_status": {
      "type": "string",
      "enum": ["pending","submitted","accepted","rejected","unknown"]
    },
    "aeat_event_codes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": {
      "type": "string"
    },
    "// 6. System Metadata": {
      "type": "null",
      "description": "System processing metadata"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "confidence_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "extraction_timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "ocr_engine": {
          "type": "string",
          "enum": ["mistral","tesseract","hybrid"]
        },
        "ocr_engine_version": {
          "type": "string"
        },
        "source_file": {
          "type": "string"
        },
        "source_file_checksum": {
          "type": "string"
        },
        "page_count": {
          "type": "integer",
          "minimum": 1
        },
        "image_resolution": {
          "type": "integer",
          "minimum": 72
        },
        "processing_duration_ms": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}